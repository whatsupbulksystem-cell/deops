<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcBasic</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: Arial, sans-serif; line-height: 1.6; }

        header { background: #333; color: #fff; padding: 1rem 0; }
        nav { max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; padding: 0 20px; }
        .logo { font-size: 1.5rem; font-weight: bold; }
        .nav-links a { color: #fff; text-decoration: none; margin-left: 20px; padding: 8px 16px; }
        .nav-links a:hover { background: #555; border-radius: 4px; }

        main { max-width: 1200px; margin: 0 auto; padding: 40px 20px; min-height: calc(100vh - 160px); }

        footer { background: #333; color: #fff; text-align: center; padding: 1rem 0; }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="logo">MvcBasic</div>
            <div class="nav-links">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Home" asp-action="About">About</a>
                <a asp-controller="Products" asp-action="Index">Products</a>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2025 MvcBasic. All rights reserved.</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
